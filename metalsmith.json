{
  "source"      : "site",
  "destination" : "gh-pages",
  "plugins"     : {
    "metalsmith-less" : {
      "render" : {
        "paths" : ["site"]
      }
    },
    "metalsmith-ignore" : [
      "**/_*",
      "**/_*/**/*",
      "**/*.less"
    ],
    "metalsmith-assets" : {
      "source"      : "site/assets",
      "destination" : "assets"
    },
    "metalsmith-raw"  : true,
    "metalsmith-jade" : {
      "pretty"      : true,
      "useMetadata" : true
    }
  }
}